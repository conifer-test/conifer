{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "strict": ["error"],
        "no-ternary": ["error"],
        "no-useless-concat": ["error"],
        "no-var": ["error"],
        "space-infix-ops": ["error"],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"],
        "rest-spread-spacing": ["error", "always"],
        "prefer-const": ["error"],
        "no-magic-numbers": ["error"]
    }
}
